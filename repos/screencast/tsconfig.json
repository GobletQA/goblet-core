{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@GSC/Configs": ["configs"],
      "@GSC/Constants": ["src/constants"],
      "@GSC/Endpoints": ["src/endpoints"],
      "@GSC/Screencast": ["src/screencast"],
      "@GSC/Libs": ["src/libs"],
      "@GSC/Playwright": ["src/libs/playwright"],
      "@GSC/Vnc": ["src/libs/vnc"],
      "@GSC": ["src"],
      "@GSCRoot": ["./"],
      "@GEnv": ["../shared/src/environment/environment"],
      "@GEnv/secrets": ["../shared/src/environment/secrets"],
      "@GEnv/values": ["../shared/src/environment/values"],
      "@GEnvironment": ["../shared/src/environment/environment"],
      "@GEnvironment/secrets": ["../shared/src/environment/secrets"],
      "@GEnvironment/values": ["../shared/src/environment/values"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}