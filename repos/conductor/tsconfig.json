{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@gobletqa/shared/app": ["../shared/src/express/app"],
      "@gobletqa/shared/middleware": ["../shared/src/middleware"],
      "@gobletqa/shared/middleware/*": ["../shared/src/middleware/*"],
      "@gobletqa/shared/utils": ["../shared/src/utils"],
      "@gobletqa/shared/utils/getOrigin": ["../shared/src/utils/getOrigin"],
      "@gobletqa/conductor": ["src"],
      "@gobletqa/conductor/*": ["src/*"],
      "@gobletqa/conductor/root": ["./"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}