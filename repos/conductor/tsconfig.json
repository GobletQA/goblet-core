{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@GCD": ["src"],
      "@GCD/Configs": ["configs"],
      "@GCD/Controller": ["src/controller"],
      "@GCD/Controller/*": ["src/controller/*"],
      "@GCD/Endpoints": ["src/endpoints"],
      "@GCD/Endpoints/*": ["src/endpoints/*"],
      "@GCD/Middleware": ["src/middleware"],
      "@GCD/Middleware/*": ["src/middleware/*"],
      "@GCD/Proxy": ["src/proxy"],
      "@GCD/Proxy/*": ["src/proxy/*"],
      "@GCDRoot": ["./"],
      "@GCD/Server": ["src/server"],
      "@GCD/Server/*": ["src/server/*"],
      "@GCD/Utils": ["src/utils"],
      "@GCD/Utils/*": ["src/utils/*"],
      "@gobletqa/shared/app": ["../shared/src/express/app"],
      "@gobletqa/shared/middleware": ["../shared/src/middleware"],
      "@gobletqa/shared/middleware/*": ["../shared/src/middleware/*"],
      "@gobletqa/shared/utils": ["../shared/src/utils"],
      "@gobletqa/shared/utils/getOrigin": ["../shared/src/utils/getOrigin"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}