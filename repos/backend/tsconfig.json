{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@GBK/Configs": ["configs"],
      "@GBK/Libs": ["src/libs"],
      "@GBK/Utils": ["src/utils"],
      "@GBK/Sockr": ["src/sockr"],
      "@GBK/Endpoints": ["src/endpoints"],
      "@GBK/Middleware": ["src/middleware"],
      "@GBK": ["src"],
      "@GBKRoot": ["./"],
      "@gobletqa/shared": ["../shared/src"],
      "@gobletqa/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}