{
  "delay": "500",
  "exec": "etsc --config=configs/etsc.config.js && node index.js",
  "ext": "ts,mjs,js,json,graphql",
  "watch": [
    "config",
    "src",
    "../screencast/src/endpoints",
    "../screencast/src/libs",
    "../shared",
    "../workflows",
    "node_modules/@ltipton/sockr/src/server",
    "node_modules/@ltipton/parkin/build/cjs"
  ],
  "ignoreRoot": [
    ".git",
    "docs",
    "node_modules/.bin",
    "scripts",
    "tasks",
    "tests",
    "temp"
  ]
}
